<Window x:Class="TP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP"
        mc:Ignorable="d"
        Title="AppTP" Height="465" Width="820">
    <Grid Margin="0,-8,0,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Margin="21,17,1,0" Stroke="Black" Grid.ColumnSpan="3" Grid.RowSpan="15"/>
        <Button x:Name="Lb1" Content="Работа 1" Margin="17,29,17,21" Click="Lb1_Click" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        <Button x:Name="Lb2" Content="Работа 2" Margin="17,17,17,18" Click="Lb2_Click" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="Lb3" Content="Работа 3" Margin="17,18,17,16" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="3"/>
        <Button x:Name="Lb4" Content="Работа 4" Margin="17,16,17,15" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" Grid.RowSpan="3"/>
        <Button x:Name="Lb5b" Content="Работа 5" Margin="17,12,17,16" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="8" Grid.RowSpan="3"/>
        <Button x:Name="Lb6b" Margin="17,17,17,17" RenderTransformOrigin="0.511,0.537" Content="Работа 6" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="10" Grid.RowSpan="3"/>
        <Button Margin="17,20,17,17" Content="Работа 7" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="12" Grid.RowSpan="3"/>
        <ListBox x:Name="TextInfo" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="18,35,14,17" FontFamily="Calibri" FontSize="14" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="14"/>
        <Button x:Name="Start" Content="Запуск" Margin="0,23,6,0" Click="Start_Click" Grid.Column="4" Grid.Row="13" Grid.RowSpan="2"/>

    </Grid>
</Window>
