<Window x:Class="TP.Windows.LB3.Lb3"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 3" Height="300" Width="400" Background="#FFCFDFF3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="202*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Label Content="Лабораторная работа 3" Margin="3,2,3,3" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Button x:Name="Task1Button" Content="Задача 1: Поиск предложений" Click="Task1Button_Click" Grid.Row="3" Margin="1,1,1,2" Grid.Column="2"/>
        <Button x:Name="Task2Button" Content="Задача 2: Исправление ошибок" Margin="1,1,1,1" Click="Task2Button_Click" Grid.Row="5" Grid.Column="2"/>
        <Button x:Name="Task3Button" Content="Задача 3: Регулярное выражение" Click="Task3Button_Click" Margin="1,2,1,1" Grid.Row="7" Grid.Column="2"/>
    </Grid>
</Window>