<Window x:Class="TP.Windows.LB3.lb3_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 3.1" Height="400" Width="500">
    <Grid>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Height="100"/>
        <Button x:Name="LoadTextButton" Content="Загрузить текст из файла" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="LoadTextButton_Click"/>
        <TextBox x:Name="InputWord" HorizontalAlignment="Left" Margin="20,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30"/>
        <Button x:Name="SearchButton" Content="Найти предложения" HorizontalAlignment="Left" Margin="240,180,0,0" VerticalAlignment="Top" Width="150" Height="30" Click="SearchButton_Click"/>
        <ListBox x:Name="ResultListBox" HorizontalAlignment="Left" Margin="20,220,0,0" VerticalAlignment="Top" Width="450" Height="150"/>
    </Grid>
</Window>