<Window x:Class="TP.Windows.LB3.Tasks.LB3_2.lb3_2"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 3.2" Height="400" Width="500">
    <Grid>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Height="100"/>
        <Button x:Name="LoadTextButton" Content="Загрузить текст из файла" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="LoadTextButton_Click"/>
        <Button x:Name="FixButton" Content="Исправить ошибки" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top" Width="150" Height="30" Click="FixButton_Click"/>
        <TextBox x:Name="OutputText" HorizontalAlignment="Left" Margin="20,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Height="150" IsReadOnly="True"/>
    </Grid>
</Window>