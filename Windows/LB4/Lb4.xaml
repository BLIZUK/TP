<Window x:Class="TP.Windows.LB4.Lb4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 4" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки для выбора задачи -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Задача 1" Margin="10" Click="NavigateToTask1"/>
            <Button Content="Задача 2" Margin="10" Click="NavigateToTask2"/>
            <Button Content="Задача 3" Margin="10" Click="NavigateToTask3"/>
        </StackPanel>

        <!-- Контейнер для страниц -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>