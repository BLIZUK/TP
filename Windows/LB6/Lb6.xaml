<Window x:Class="TP.Windows.LB6.Lb6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шестнадцатеричный счетчик" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Отображение текущего значения -->
        <TextBlock x:Name="info_TB" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="3"
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,10" 
                   Text="0x0"/>

        <!-- Поля ввода границ -->
        <StackPanel Grid.Row="1" 
                    Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <TextBox x:Name="min_TB" 
                     Width="80" 
                     Margin="5" 
                     Text="0x0"
                     Tag="Min (hex/dec)"
                     ToolTip="Введите минимальное значение в формате 0x00 или 10"
                     LostFocus="Min_TB_LostFocus"/>

            <TextBlock Text="-" 
                       VerticalAlignment="Center" 
                       Margin="5"/>

            <TextBox x:Name="max_TB" 
                     Width="80" 
                     Margin="5" 
                     Text="0xFF"
                     Tag="Max (hex/dec)"
                     ToolTip="Введите максимальное значение в формате 0xFF или 255"
                     LostFocus="Max_TB_LostFocus"/>
        </StackPanel>

        <!-- Кнопка применения границ -->
        <Button Content="Применить границы" 
                Grid.Row="2" 
                Grid.ColumnSpan="3"
                Margin="5" 
                Padding="10,2" 
                Click="ApplyBounds_Click"/>

        <!-- Поле ввода шага -->
        <TextBox x:Name="count_TB" 
                 Grid.Row="3" 
                 Grid.ColumnSpan="3"
                 Width="100" 
                 Margin="5" 
                 HorizontalAlignment="Center"
                 Text="1" 
                 TextAlignment="Center"
                 Tag="Шаг изменения"
                 ToolTip="Введите шаг изменения в hex/dec"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="4" 
                    Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="Dev_but" 
                    Content="Вычесть" 
                    Margin="5" 
                    Padding="20,5" 
                    Click="Dev_but_Click"/>

            <Button x:Name="Add_but" 
                    Content="Добавить" 
                    Margin="5" 
                    Padding="20,5" 
                    Click="Add_but_Click"/>
        </StackPanel>
    </Grid>
</Window>